<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace ="com.example.demo.repository.UserRepository">

<!-- usernameによるユーザー検索 -->
<select id="userSelectByUsername" resultType="com.example.demo.entity.User">
SELECT * FROM users WHERE username =#{username}
</select>

<!--  ユーザー新規登録 -->
<insert id="userInsert" >
INSERT INTO users (username,password,displayName,tellNumber,authority)
VALUES
(#{username},#{password},#{displayName},#{tellNumber},#{authority.getConvertAuthority})
</insert>

</mapper>